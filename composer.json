{
    "name": "abc/wp-ecommerce",
    "description": "Composer settings for the project.",
    "type": "project",
    "require": {
        "php": "^8.2",
        "ext-mysqli": "*",
        "johnpbloch/wordpress-core-installer": "^2.0",
        "johnpbloch/wordpress": "^6.3",
        "wpackagist-plugin/akismet": "^5.3",
        "wpackagist-theme/twentytwentyone": "^2.0",
        "wpackagist-plugin/wp-redis": "^1.4",
        "wpackagist-plugin/wp-native-php-sessions": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "scripts": {
        "test": "phpunit"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "johnpbloch/wordpress-core-installer": true,
            "composer/installers": true
        }
    }
}
